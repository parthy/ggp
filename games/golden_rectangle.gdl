;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
(<= (lte 0 ?x)
        (number ?x))
        
(<= (lte ?x ?x)
        (number ?x))
        
(<= (lte ?x ?z)
    (succ ?y ?z)
    (lte ?x ?y))

(<= (lte ?x ?y)
    (succ ?x ?y))

